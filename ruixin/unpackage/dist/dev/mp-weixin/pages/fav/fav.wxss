.fav {
  height: 100vh;
  background-color: #f7f7f7;
}
.fav .ftop {
  width: 100%;
  height: 166rpx;
  background-color: blue;
}
.fav .container {
  position: relative;
  top: -66rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 30rpx;
  padding-bottom: 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.fav .container .content {
  margin: 18rpx 0 0rpx 18rpx;
  width: 30%;
  color: gray;
}
.fav .container .content .img {
  outline: 1rpx solid lightgray;
  margin-bottom: 20rpx;
}
.fav .container .content .img img {
  vertical-align: bottom;
  width: 100%;
}
.fav .container .content .name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.fav .container .content .en {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 22rpx;
  margin-top: 20rpx;
  margin-bottom: 26rpx;
}
.fav .container .content .price {
  font-size: 26rpx;
  color: blue;
  font-weight: bold;
}
.fav .container .content .price .reo {
  float: right;
}
.fav .containers {
  width: 100%;
  color: gray;
  height: 66vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
