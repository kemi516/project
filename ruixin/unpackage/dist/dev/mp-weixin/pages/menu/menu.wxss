.nav {
  width: 100%;
  justify-content: space-evenly;
  display: flex;
  background-color: whitesmoke;
}
.nav .icon {
  padding: 20rpx;
  text-align: center;
}
.nav .icon image {
  width: 80rpx;
  height: 80rpx;
}
.bottom {
  color: gray;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-box {
  padding: 20rpx;
  box-sizing: border-box;
}
.search-box .search {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 48rpx;
  background-color: #f8f8f8;
  color: gray;
}
.menu {
  background-color: whitesmoke;
  padding: 30rpx;
}
.menu .menu-box {
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
  background-color: #fff;
}
.menu .menu-box > view {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: gray;
}
.menu .menu-box > view image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.menu .menu-box .text {
  color: #0C34BA;
  font-weight: bold;
}
