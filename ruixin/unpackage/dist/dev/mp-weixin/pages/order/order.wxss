.box {
  background-color: whitesmoke;
  padding: 20rpx;
}
.box > view {
  border-radius: 10rpx;
}
.header {
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: #fff;
  color: gray;
}
.header .user {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.header .name {
  color: #0C34BA;
  font-size: 32rpx;
  font-weight: bold;
}
.header .phone {
  margin: 0 30rpx;
}
.header .yes {
  font-size: 24rpx;
  padding: 5rpx 20rpx;
  background-color: #0C34BA;
  box-sizing: border-box;
  color: #fff;
  border-radius: 34rpx;
}
.order-box {
  background-color: #fff;
}
.order-box > p {
  padding: 20rpx;
}
.order-box .order {
  width: 100%;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
}
.order-box .order image {
  width: 200rpx;
  height: 200rpx;
}
.order-box .order > view {
  color: gray;
  flex-grow: 1;
  padding: 0 20rpx;
  height: 200rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.order-box .order > view > view:nth-of-type(2) {
  display: flex;
  justify-content: space-between;
}
.order-box .order > view p:nth-of-type(2) {
  margin: 10rpx 0;
}
.order-box .order > view .price {
  color: #0C34BA;
  font-weight: bold;
}
.date {
  border-top: 2rpx dashed gray;
  background-color: #fff;
  padding: 30rpx 20rpx;
  color: gray;
}
.date > view {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.date > view > text:nth-of-type(2) {
  color: #0C34BA;
  font-weight: bold;
}
.foot {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  left: 0;
  background-color: white;
  padding: 20rpx;
  box-sizing: border-box;
}
.foot view {
  width: 100%;
  border-radius: 48rpx;
  color: white;
  padding: 20rpx 0;
  text-align: center;
  background-color: #0C34BA;
}
