.fav {
  height: 100vh;
}
.fav .ftop {
  width: 100%;
  height: 166rpx;
  background-color: blue;
}
.fav .container {
  position: relative;
  top: -66rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  padding-bottom: 15rpx;
  background-color: whitesmoke;
}
.fav .container .content {
  margin: 18rpx 0 0rpx 18rpx;
  width: 30%;
  color: gray;
}
.fav .container .content .img {
  outline: 1rpx solid lightgray;
  margin-bottom: 20rpx;
}
.fav .container .content .img image {
  vertical-align: bottom;
  width: 100rpx;
}
.fav .container .content .name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.fav .container .content .en {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 22rpx;
  margin-top: 20rpx;
  margin-bottom: 26rpx;
}
.fav .container .content .price {
  font-size: 26rpx;
  color: blue;
  font-weight: bold;
}
.fav .container .content .price .reo {
  float: right;
}
.fav .containers {
  width: 100%;
  color: gray;
  height: 66vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.order-box {
  background-color: #fff;
  margin: 20rpx 0;
  border-radius: 10rpx;
}
.order-box > p {
  padding: 20rpx;
}
.order-box .top {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: gray;
}
.order-box .top p {
  display: flex;
  align-items: center;
}
.order-box .order {
  border-radius: 10rpx;
  width: 100%;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
}
.order-box .order image {
  width: 200rpx;
  height: 200rpx;
}
.order-box .order > view {
  color: gray;
  flex-grow: 1;
  padding: 0 20rpx;
  height: 200rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.order-box .order > view > view:nth-of-type(2) {
  display: flex;
  justify-content: space-between;
}
.order-box .order > view p:nth-of-type(2) {
  margin: 10rpx 0;
}
.order-box .order > view .price {
  color: #0C34BA;
  font-weight: bold;
}
.date {
  border-top: 2rpx dashed gray;
  background-color: #fff;
  padding: 30rpx 20rpx;
  color: gray;
}
.date > view {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.date > view > text:nth-of-type(2) {
  color: #0C34BA;
  font-weight: bold;
}
