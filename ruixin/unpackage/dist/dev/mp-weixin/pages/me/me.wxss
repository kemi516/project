.me {
  background-color: #f7f7f7;
  height: 100vh;
}
.me .topbg {
  background: url("../../static/bg.webp") no-repeat center / cover;
  width: 100%;
  height: 400rpx;
}
.me .container {
  color: gray;
  position: relative;
  top: -66rpx;
  width: 90%;
  border-radius: 22rpx 22rpx 0 0;
  box-sizing: border-box;
  margin: auto;
  padding: 23rpx;
  background-color: #ffffff77;
}
.me .container .topc {
  display: flex;
  margin-bottom: 66rpx;
}
.me .container .topc .limg {
  margin-right: 22rpx;
}
.me .container .topc .limg image {
  box-shadow: 0 0 1rpx gray;
  border-radius: 50%;
  width: 133rpx;
  height: 133rpx;
}
.me .container .topc .right h6 {
  font-size: 33rpx;
  color: blue;
  margin-bottom: 13rpx;
}
.me .container .topc .right view {
  font-size: 26rpx;
}
.me .container .lists > view {
  padding: 33rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
}
.me .container .lists > view:last-child {
  padding-bottom: 0;
  border: 0;
}
